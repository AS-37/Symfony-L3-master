{% extends 'admin/layout.html.twig' %}

{% block title %}Pages d'accueil{% endblock %}

{% block body %}
    <h1>Pages d'accueil</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Body</th>
                <th>TitleAbout</th>
                <th>TextAbout</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for homepage in homepages %}
            <tr>
                <td>{{ homepage.id }}</td>
                <td>{{ homepage.title }}</td>
                <td>{{ homepage.body }}</td>
                <td>{{ homepage.titleAbout }}</td>
                <td>{{ homepage.textAbout }}</td>
                <td>
                    <a href="{{ path('index')}}">show</a>
                    <a href="{{ path('homepage_edit', {'id': homepage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>

                <td colspan="6"><a href="{{ path('homepage_new') }}">Create new</a></td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
